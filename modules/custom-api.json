{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Custom API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url":"http://localhost:8080/exist/apps/eltec"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/api/search/document": {
            "get": {
                "summary": "Retrieve documents matching search criteria",
                "tags": [
                    "search"
                ],
                "operationId": "qapi:query-document",
                "parameters": [
                    {
                        "name": "query",
                            "in": "query",
                            "description": "Query string",
                            "schema": {
                                "type": "string",
                                "default": "este"
                            }
                    },
                    {
                        "name": "author",
                            "in": "query",
                            "description": "Author",
                            "schema": {
                                "type": "string",
                                "default": "ioan"
                            }
                    },
                    {
                        "name": "title",
                            "in": "query",
                            "description": "Title",
                            "schema": {
                                "type": "string",
                                "default": "mara"
                            }
                    },
                    {
                        "name": "language",
                            "in": "query",
                            "description": "Language",
                            "schema": {
                                "type": "string",
                                "default": "ro"
                            }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Version information about this service",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/document/{id}/frequency": {
            "get": {
                "summary": "Retrieve frequency list for a document",
                "tags": [
                    "documents"
                ],
                "operationId": "lapi:document-frequency",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "eng/ENG18831_Ouida.xml"
                        }
                    },
                    {
                        "name": "max",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": "10000"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns the frequency list for a document as HTML",
                        "content": {
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Document not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/collection/{path}/frequency": {
            "get": {
                "summary": "Get a frequency list for the collection",
                "tags": [ "collection" ],
                "operationId": "lapi:collection-frequency",
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "schema":{
                            "type": "string",
                            "example": "test"
                        }
                    },
                    {
                        "name": "max",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": "10000"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns HTML listing the index terms for a collection sorted by frequency",
                        "content":{
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }

    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}